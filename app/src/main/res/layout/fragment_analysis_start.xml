<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment_analysis_start">

    <TextView
        android:id="@+id/anlysisTextt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/analysis_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="50dp"
        android:textSize="33dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/footImg"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf ="@id/anlysisTextt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:src="@drawable/sole" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/footImg"
        android:layout_marginTop="35dp"
        android:stretchColumns="1"
        android:padding="10dp"
        android:background="@drawable/table_layout_border">

        <!-- 첫 번째 행 -->
        <TableRow
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="걷기 점수"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight="1"
                android:padding="10dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="temp"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight="1"
                android:padding="10dp"/>
        </TableRow>

        <!-- 두 번째 행 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="하중 부위"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight="1"
                android:padding="10dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="temp"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight="1"
                android:padding="10dp"/>
        </TableRow>

        <!-- 세 번째 행 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="걸음 유형"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight="1"
                android:padding="10dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="temp"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight="1"
                android:padding="10dp"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
