<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_text"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/sole"
        android:layout_marginBottom="45dp"/>

    <ImageView
        android:id="@+id/sole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sole1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="13dp"
        android:layout_marginRight="13dp"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/sq1"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:src="@drawable/number3"
        app:layout_constraintTop_toTopOf="@+id/sole"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="69dp"
        android:layout_marginBottom="150dp"/>

    <ImageView
        android:id="@+id/sq2"
        android:layout_width="145dp"
        android:layout_height="145dp"
        app:layout_constraintTop_toTopOf="@+id/sole"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="140dp"
        android:layout_marginRight="85dp"
        android:src="@drawable/number2"/>

    <ImageView
        android:id="@+id/sq3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/number1"
        app:layout_constraintTop_toTopOf="@+id/sole"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="80dp"/>

    <Button
        android:id="@+id/tutorial_button"
        android:text="다음"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/sole"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
